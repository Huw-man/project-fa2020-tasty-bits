<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/questionhub">

    <fragment
        android:id="@+id/infohub"
        android:name="com.example.tastybits.ui.informationhub.InfoHubFragment"
        android:label="infohub"
        tools:layout="@layout/fragment_infohub" />

    <fragment
        android:id="@+id/questionhub"
        android:name="com.example.tastybits.ui.questionhub.QuestionHubFragment"
        android:label="questionhub"
        tools:layout="@layout/fragment_questionhub"/>


    <fragment
