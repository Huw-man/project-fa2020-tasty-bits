<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.questionhub.QuestionHubFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">
            <Space
                android:layout_width="wrap_content"
                android:layout_height="20dp" />
            <ImageView
                android:id="@+id/first_gen_infohub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:src="@drawable/firstgen2"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                tools:layout_editor_absoluteX="3dp" />
            <ImageView
                android:id="@+id/transfer_infohub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:src="@drawable/transfer"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                tools:layout_editor_absoluteX="3dp" />
            <ImageView
                android:id="@+id/international_infohub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:src="@drawable/international"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                tools:layout_editor_absoluteX="3dp" />


            <ImageView
                android:id="@+id/class_planning_infohub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:src="@drawable/infohub_class_planning"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                tools:layout_editor_absoluteX="3dp" />


            <ImageView
                android:id="@+id/enrollment_infohub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:src="@drawable/infohub_enrollment"
                app:layout_constraintTop_toBottomOf="@+id/enrollment_infohub"
                tools:layout_editor_absoluteX="3dp" />

            <ImageView
                android:id="@+id/fafsa_infohub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:src="@drawable/infohub_fafsa"
                app:layout_constraintTop_toBottomOf="@+id/fafsa_infohub"
                tools:layout_editor_absoluteX="3dp" />

            <ImageView
                android:id="@+id/decal_infohub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:src="@drawable/infohub_clubs_decals"
                app:layout_constraintTop_toBottomOf="@+id/decal_infohub"
                tools:layout_editor_absoluteX="3dp" />

            <ImageView
                android:id="@+id/job_hunting_infohub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"

                android:src="@drawable/infohub_job_hunting"
                app:layout_constraintTop_toBottomOf="@+id/job_hunting_infohub"
                tools:layout_editor_absoluteX="3dp" />

            <ImageView
                android:id="@+id/housing_infohub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:src="@drawable/infohub_housing"
                app:layout_constraintTop_toBottomOf="@+id/housing_infohub"
                tools:layout_editor_absoluteX="3dp" />
            <Space
                android:layout_width="wrap_content"
                android:layout_height="20dp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>